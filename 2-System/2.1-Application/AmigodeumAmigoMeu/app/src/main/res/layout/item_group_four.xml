<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image2"
        android:layout_width="20dp"
        android:layout_gravity="center"
        android:layout_height="20dp"
        android:src="@drawable/eu"
        android:layout_alignTop="@+id/profile_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="20dp"
        android:layout_gravity="center"
        android:layout_height="20dp"
        android:src="@drawable/eu"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/profile_image2"
        android:layout_toEndOf="@+id/profile_image2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image3"
        android:layout_width="20dp"
        android:layout_gravity="center"
        android:layout_height="20dp"
        android:src="@drawable/eu"
        android:layout_below="@+id/profile_image2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image4"
        android:layout_width="20dp"
        android:layout_gravity="center"
        android:layout_height="20dp"
        android:src="@drawable/eu"
        android:layout_below="@+id/profile_image2"
        android:layout_toRightOf="@+id/profile_image3"
        android:layout_toEndOf="@+id/profile_image3" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simbora tomar uma  atÃ© a"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignTop="@+id/profile_image"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alguem afim de sair para beber?"
        android:layout_alignBottom="@+id/profile_image4"
        android:layout_alignLeft="@+id/tvTitle"
        android:layout_alignStart="@+id/tvTitle" />

</RelativeLayout>